TestCase subclass: #TestMicros	instanceVariableNames: 'unMicro unApurado'	classVariableNames: ''	poolDictionaries: ''	category: 'Micros-Tests'!!TestMicros methodsFor: 'as yet unclassified' stamp: 'Nahuel 9/9/2015 16:53'!setUp	unMicro := Micro new.	unMicro capacidadSentados: 10.	unMicro capacidadParados: 10.	unApurado := Apurado new.! !!TestMicros methodsFor: 'as yet unclassified' stamp: 'Nahuel 9/9/2015 16:53'!testApuradoSePuedeSubirAMicroVacio	self assert: (unMicro puedeSubirse: unApurado).! !!TestMicros methodsFor: 'as yet unclassified' stamp: 'Nahuel 9/9/2015 16:53'!testApuradoNoSePuedeSubirAMicroSinCapacidad	unMicro capacidadSentados: 0.	unMicro capacidadParados: 0.	self deny: (unMicro puedeSubirse: unApurado).! !Object subclass: #Apurado	instanceVariableNames: ''	classVariableNames: ''	poolDictionaries: ''	category: 'Micros-Dominio'!!Apurado methodsFor: 'as yet unclassified' stamp: 'Nahuel 9/9/2015 16:46'!seQuiereSubirA: unMicro	^ true.! !Object subclass: #Micro	instanceVariableNames: 'capacidadSentados capacidadParados pasajeros'	classVariableNames: ''	poolDictionaries: ''	category: 'Micros-Dominio'!!Micro methodsFor: 'as yet unclassified' stamp: 'Nahuel 9/9/2015 16:36'!initialize	pasajeros := OrderedCollection new.! !!Micro methodsFor: 'as yet unclassified' stamp: 'Nahuel 9/9/2015 16:40'!capacidadSentados: unaCant	capacidadSentados := unaCant.! !!Micro methodsFor: 'as yet unclassified' stamp: 'Nahuel 9/9/2015 17:20'!hayLugarLibre	^ self lugaresLibres > 0.! !!Micro methodsFor: 'as yet unclassified' stamp: 'Nahuel 9/9/2015 15:34'!puedeSubirse: unaPersona	^self hayLugarLibre and: [ unaPersona seQuiereSubirA: self ].! !!Micro methodsFor: 'as yet unclassified' stamp: 'Nahuel 9/9/2015 16:40'!capacidadParados: unaCant	capacidadParados := unaCant.! !!Micro methodsFor: 'as yet unclassified' stamp: 'Nahuel 9/9/2015 17:15'!subiA: unaPersona		(self puedeSubirse: unaPersona) 		ifFalse: [self error: 'No puede subirse'].			pasajeros add: unaPersona.! !!Micro methodsFor: 'as yet unclassified' stamp: 'Nahuel 9/9/2015 17:07'!lugaresLibres	^(capacidadParados + capacidadSentados) - pasajeros size.! !Object subclass: #Moderado	instanceVariableNames: 'cantAsientosLibres'	classVariableNames: ''	poolDictionaries: ''	category: 'Micros-Dominio'!!Moderado methodsFor: 'as yet unclassified' stamp: 'Nahuel 9/9/2015 17:06'!seQuiereSubirA: unMicro	 ^unMicro lugaresLibres >= cantAsientosLibres.! !!Moderado methodsFor: 'as yet unclassified' stamp: 'Nahuel 9/9/2015 17:08'!cantAsientosLibres: unaCant	cantAsientosLibres := unaCant.! !